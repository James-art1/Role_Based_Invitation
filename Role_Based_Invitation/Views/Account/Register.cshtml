<div style="max-width: 400px; margin: 40px auto; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border-radius: 8px; background: #fff; padding: 32px;">
    <h2 style="text-align:center; margin-bottom: 24px;">Register</h2>
    <form method="post">
        <div style="margin-bottom: 16px;">
            <input name="username" placeholder="Username" style="width:100%; padding:10px; border-radius:4px; border:1px solid #ccc;" />
        </div>
        <div style="margin-bottom: 16px;">
            <input name="email" type="email" placeholder="Email" style="width:100%; padding:10px; border-radius:4px; border:1px solid #ccc;" />
        </div>
        <div style="margin-bottom: 16px;">
            <input name="password" type="password" placeholder="Password" style="width:100%; padding:10px; border-radius:4px; border:1px solid #ccc;" />
        </div>
        <div style="margin-bottom: 24px;">
            <input name="organizationName" placeholder="Organization Name" style="width:100%; padding:10px; border-radius:4px; border:1px solid #ccc;" />
        </div>
        <button type="submit" style="width:100%; padding:12px; border:none; border-radius:4px; background:#007bff; color:#fff; font-size:16px;">Register</button>
    </form>
    <p style="text-align:center; margin-top: 16px;">
        <a asp-action="Login">Login</a>
    </p>
</div>
