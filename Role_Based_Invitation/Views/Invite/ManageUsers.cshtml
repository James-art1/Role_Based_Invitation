@model IEnumerable<Role_Based_Invitation.Models.User>
@{
    ViewData["Title"] = "Manage Users";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Invite New User</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="InviteUser" class="row g-2">
                        <div class="col-8">
                            <input name="receiverEmail" type="email" class="form-control" placeholder="Receiver Email" required />
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-success w-100">Send Invite</button>
                        </div>
                    </form>
                    @if (ViewBag.ReceiverEmail != null)
                    {
                        <div class="alert alert-success mt-3 mb-0 p-2 text-center">
                            Invite sent to <strong>@ViewBag.ReceiverEmail</strong>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Create Practical Examination</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ExamCreated != null)
                    {
                        <div class="alert alert-success mb-3 p-2 text-center">
                            @ViewBag.ExamCreated
                        </div>
                    }
                    <form method="post" asp-action="CreateExam">
                        <div class="mb-2">
                            <label class="form-label">Title:</label>
                            <input type="text" name="title" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Description:</label>
                            <textarea name="description" class="form-control" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Date:</label>
                            <input type="date" name="date" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Create Exam</button>
                    </form>
                    <a asp-controller="Invite" asp-action="UserExams" class="btn btn-outline-secondary w-100 mt-2">View All Exams</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Users in Your Organization</h5>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-3">
                    <p class="mb-0 text-muted">No users yet.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Email</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Email</td>
                                    <td>@user.Role</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
